    "dashboard": "node tools/dashboard-open.js",
    "codex:autopilot": "node tools/codex-autopilot.js",
    "service:start": "tsx service/server.ts",
    "desktop:start": "node tools/desktop-launcher.cjs",
    "ports:clean": "npx kill-port 5757 5758",
    "validate:baseline": "node tools/validate-baseline.js",
    "deemind:preview": "nodemon server/preview.js demo"
