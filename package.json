    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2"
  },
  "lint-staged": {
    "*.{js,cjs,mjs}": "eslint --fix",
    "*.{json,md,css,scss}": "prettier --write"
