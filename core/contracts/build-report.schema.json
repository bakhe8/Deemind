{
  "$id": "BuildReport",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["id", "theme", "result", "generatedAt", "durationMs", "counts"],
  "properties": {
    "id": { "type": "string" },
    "theme": { "type": "string" },
    "result": { "enum": ["pass", "fail"] },
    "generatedAt": { "type": "string", "format": "date-time" },
    "durationMs": { "type": "number", "minimum": 0 },
    "counts": {
      "type": "object",
      "required": ["warnings", "errors", "pages"],
      "properties": {
        "warnings": { "type": "number", "minimum": 0 },
        "errors": { "type": "number", "minimum": 0 },
        "pages": { "type": "number", "minimum": 0 }
      }
    },
    "stages": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "durationMs", "status"],
        "properties": {
          "name": { "type": "string" },
          "durationMs": { "type": "number", "minimum": 0 },
          "status": { "enum": ["pass", "fail", "skipped"] },
          "warnings": {
            "type": "array",
            "items": { "type": "string" }
          },
          "errors": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      }
    }
  },
  "additionalProperties": true
}
